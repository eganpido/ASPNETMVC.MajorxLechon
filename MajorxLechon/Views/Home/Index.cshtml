<!DOCTYPE html>
<html class="home-html-height">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="shortcut icon" href="~/Images/icon/streetsmartLogo.ico">
    <title>Majorx Lechon</title>

    @Styles.Render("~/Content/Home-css")
    <style>
        /*
        * CSS for Sticky Footer using Flexbox
        * This ensures the footer is always at the bottom of the viewport
        * even if the content is short.
        */
        html, body {
            height: 100%; /* Make html and body take full viewport height */
            margin: 0; /* Remove default body margin */
            padding: 0; /* Remove default body padding */
            display: flex; /* Enable flexbox on the body */
            flex-direction: column; /* Stack children vertically */
        }

        /* This is the key: it allows your main content to grow and push the footer down */
        .main-content {
            flex-grow: 1; /* Occupy all available space */
            display: flex; /* Use flexbox for internal content if needed */
            flex-direction: column; /* Stack content sections vertically */
            /* Add any padding or margin here if you want space around the content */
        }

        /* General Body Font (Keep your existing) */
        body {
            font-family: 'Poppins', 'Open Sans', sans-serif;
            background: linear-gradient(to top left, rgba(255, 255, 0, .8), rgba(156, 7, 15, 1)) no-repeat;
            background-repeat: no-repeat; /* Ensures the background doesn't repeat */
            background-size: cover;
        }

        /* Existing styles (adjust as needed, ensure no conflicting margins/paddings) */
        .hero {
            background: linear-gradient(to top, rgba(255, 255, 0, .8), rgba(156, 7, 15, 1));
            color: white;
            padding: 70px 0;
        }

            .hero img {
                -webkit-mask-image: linear-gradient(to top, transparent 0%, black 10%, black 90%, transparent 100%), linear-gradient(to right, transparent 0%, black 10%, black 90%, transparent 100%);
                -webkit-mask-composite: intersect;
                mask-image: linear-gradient(to top, transparent 0%, black 10%, black 90%, transparent 100%), linear-gradient(to right, transparent 0%, black 10%, black 90%, transparent 100%);
                mask-composite: intersect;
                max-width: 100%;
                object-fit: cover;
            }

        .feature-icon {
            font-size: 7rem;
            color: #0d6efd;
        }

        /* Footer styles (your existing ones) */
        .footer-custom { /* Changed from generic 'footer' to 'footer-custom' to be specific */
            background-color: lightgray;
            color: white;
            padding: 7px 0; /* Adjusted padding to be symmetrical */
            width: 100%; /* Ensure footer spans full width */
            box-sizing: border-box; /* Include padding in the width calculation */
        }

            /* You might want to adjust these specific labels if they have default browser margins */
            .footer-custom .label-footer {
                margin-bottom: 0; /* Remove any default bottom margin */
                display: inline-block; /* Helps with vertical alignment if next to img */
                vertical-align: middle; /* Align with the image */
            }

            .footer-custom img {
                vertical-align: middle; /* Align with text */
            }

        .navbar-default {
            -webkit-transition: all .35s;
            -moz-transition: all .35s;
            transition: all .35s;
            box-shadow: 0 0px 5px #3f9794;
            border-bottom: none;
            background-color: white;
        }

        .feature-title {
            font-weight: bold;
            font-size: 2rem;
            color: darkslategray;
        }

        .feature-description {
            font-size: 1.5rem;
        }
        .order-btn {
            display: inline-block;
            padding: 12px 24px;
            background-color: #28a745; /* Green */
            color: white;
            text-decoration: none;
            border-radius: 5px;
            font-weight: bold;
            transition: background-color 0.3s ease;
        }

            .order-btn:hover {
                background-color: #218838;
            }
        .carousel-inner .item img {
            display: block; /* Ensures the image is a block-level element */
            margin: 0 auto; /* Horizontally centers the image */
            max-width: 100%; /* Keeps the image from stretching outside the container */
            height: 400px; /* Controls the height of the image */
            object-fit: cover; /* Ensures the image covers the area without distorting */
        }
        .img-banner {
            max-width: 1300px;
            width: 1300px;
            margin: 0 auto; /* Centers the image horizontally */
            display: block; /* Makes the image a block element to center it */
        }
        .corner-logo {
            opacity: 0.80;
            z-index: 1000;
            border-radius: 47%;
            box-shadow: 0 6px 18px rgba(0, 0, 0, 0.2);
            transition: transform 0.3s ease, opacity 0.3s ease;
            cursor: pointer;
        }

            .corner-logo:hover {
                transform: scale(1.05);
                opacity: 1;
            }
    </style>
</head>
<body id="page-top" class="home-body-height">

    <nav id="nav" class="navbar navbar-default navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <a class="navbar-brand page-scroll" href="#page-top">
                    <img src="~/Images/logo/STREETSMART.png" />
                </a>
            </div>
            <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </nav>

    <div class="main-content">
        <section class="hero text-center">
            <div class="container">
                <br />
                <br />
                <div>
                    <img class="img-banner" src="~/Images/majorxBanner.jpg" alt="Majorx Banner">
                </div>
                <a href="/Account/Login" class="btn btn-primary order-btn" style="margin-top:40px;">🐷 Order Now!</a>
            </div>
            <div class="container" style="padding: 40px 0;">
                <!-- Image Carousel -->
                <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
                    <div class="carousel-inner">
                        <div class="item active">
                            <img src="~/Images/slides/Image2.jpg" class="d-block w-100" alt="Image 1">
                        </div>
                        <div class="item">
                            <img src="~/Images/slides/Image1.jpg" class="d-block w-100" alt="Image 2">
                        </div>
                        <div class="item">
                            <img src="~/Images/slides/Image3.jpg" class="d-block w-100" alt="Image 3">
                        </div>
                        <div class="item">
                            <img src="~/Images/slides/Image4.jpg" class="d-block w-100" alt="Image 4">
                        </div>
                        <div class="item">
                            <img src="~/Images/slides/Image5.jpg" class="d-block w-100" alt="Image 5">
                        </div>
                        <div class="item">
                            <img src="~/Images/slides/Image6.jpg" class="d-block w-100" alt="Image 6">
                        </div>
                        <div class="item">
                            <img src="~/Images/slides/Image7.jpg" class="d-block w-100" alt="Image 7">
                        </div>
                        <div class="item">
                            <img src="~/Images/slides/Image8.jpg" class="d-block w-100" alt="Image 8">
                        </div>
                        <div class="item">
                            <img src="~/Images/slides/Image9.jpg" class="d-block w-100" alt="Image 9">
                        </div>
                        <!-- Add more carousel items here -->
                    </div>
                    <a class="left carousel-control" href="#carouselExampleIndicators" data-slide="prev">
                        <span class="glyphicon glyphicon-chevron-left"></span>
                    </a>
                    <a class="right carousel-control" href="#carouselExampleIndicators" data-slide="next">
                        <span class="glyphicon glyphicon-chevron-right"></span>
                    </a>
                </div>
            </div>
            <div>
                <img src="~/Images/logo/majorxLogo.png" class="corner-logo" alt="Majorx Logo" style="mask-composite: unset; height: 300px; width: 300px; ">
            </div>
        </section>
    </div>
    <footer class="footer-custom">
        <div class="container">
            <div class="row">
                <div class="col-md-12 text-center">
                    <label><img src="~/Images/logo/STREETSMART.png" style="height:40px; margin-top:5px; opacity: 70%" /></label>
                    <label class="label-footer" style="color:darkslategray; margin-top:5px;">© 2025, Streetsmart Corporation</label>
                </div>
            </div>
        </div>
    </footer>
    @Scripts.Render("~/Scripts/Home-js")
</body>
</html>